{% extends 'base.html.twig' %}

{% block title %}Bidule!{% endblock %} 

{% block body %}
    <div class="container bg-light px-5">

        <div class="py-5">
            <h1>Liste des articles avec l'outil Twig et l'h√©ritage</h1>
            <hr style="opacity: 1;">
        </div>

        <table class="table table-stripped text-center mb-0">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date de publication</th>
                    <th scope="col">Voir</th>
                    <th scope="col">Editer</th>
                    
                </tr>
            </thead>
            <tbody>
                <!-- boucle for twig -->
                {% for p in posts %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.auteur }}</td>
                    <td>{{ p.titre }}</td>
                    <td>{{ p.description }}</td>
                    <td>{{ p.date_publication }}</td>
                    <td><a id="iconeEye" href="" class="far fa-eye text-decoration-none"></a></td>
                    <td><a id="iconePen" href="" class="fas fa-pen text-decoration-none"></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}